<%- include("../layout/user_navbar") %>

<div class="get-bill">
    <center><div class="info-bill">
        <p>اسم البائع : <span><%= data.seller%></span></p>
        <p>اسم المتجر : <span><%= data.name%></span></p>
        <p>السعر النهائي : <span><%= data.total%></span></p>
        <p>تاريخ البيع : <span><%= data.Date%></span></p>
    </div></center>

    <p class="title">المنتجات المباعة</p>

    <table class="table container">
        <thead>
          <tr>
            <th scope="col">اسم المنتج</th>
            <th scope="col">العدد</th>
            <th scope="col">سعر القطعة</th>
            <th scope="col">السعر النهائي</th>
          </tr>
        </thead>
        <tbody>
          <% for (let index=0; index < data.cart.length; index++) { %>
            <tr>
              <td id="names">
                <%= dataName[index]%>
              </td>
              <td id="qty">
                <%= dataQty[index]%>
              </td>
              <td>
                <%= dataPrice[index]%>
              </td>
              <td id="price">
                <%= dataQty[index] * dataPrice[index]%>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>

      <br>
      <br>
      <% if(user.isAdmin == 1){ %>
        <form action="/bill/delete/<%= data.id%>?_method=DELETE" method="post">
          <center><button class="delete_bill"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <line x1="4" y1="7" x2="20" y2="7" />
            <line x1="10" y1="11" x2="10" y2="17" />
            <line x1="14" y1="11" x2="14" y2="17" />
            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
          </svg> حذف الفاتورة</button></center>
        </form>
      <% } %>
</div>

  <%- include("../layout/footer") %>